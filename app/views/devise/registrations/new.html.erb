<div class="card" style="width:50rem;margin-inline:auto">
  <div class="card-body" style="padding:36px 28px;">
    <h2>Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field form-group mb-2">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, class:"form-control" %>
      </div>
      <div class="field form-group mb-2">
        <%= f.label :name %><br />
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="field form-group mb-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class:"form-control" %>
      </div>
      <div class="field form-group mb-4">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="actions d-grid gap-3">
        <%= f.submit "Sign up", class:"btn btn-secondary" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
